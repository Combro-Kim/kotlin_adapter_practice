<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DetailFragment">

    <ImageView
        android:id="@+id/ivDetailDonutImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/icon_donut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDetailDonutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDetailDonutImage"
        tools:text="맛있는 도넛" />

    <TextView
        android:id="@+id/tvDetailDonutPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvDetailDonutName"
        tools:text="R$9.99" />

    <Button
        android:id="@+id/btn1_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetailDonutPrice" />

    <Button
        android:id="@+id/btn2_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="custom"
        app:layout_constraintStart_toEndOf="@id/btn1_alert"
        app:layout_constraintTop_toBottomOf="@id/tvDetailDonutPrice"/>

    <Button
        android:id="@+id/btn3_date"
        app:layout_constraintTop_toBottomOf="@id/tvDetailDonutPrice"
        app:layout_constraintStart_toEndOf="@id/btn2_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="DatePicker" />

    <Button
        android:id="@+id/btn4_time"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn1_alert"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Time picker dialog" />

    <Button
        android:id="@+id/btnNotification"
        app:layout_constraintTop_toBottomOf="@id/btn1_alert"
        app:layout_constraintStart_toEndOf="@id/btn4_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="알림" />


    <TextView
        android:id="@+id/tvDetailDonutDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn4_time"
        tools:text="도넛 맛깔나게 하는 방법" />

</androidx.constraintlayout.widget.ConstraintLayout>